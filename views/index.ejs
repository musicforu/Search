<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script type="text/javascript" src="/javascripts/angular-1.3.0.js"></script>
    <script src='/javascripts/page.js'></script>
  </head>
  <body ng-app='myApp'>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <form name='zsbd' method='post' action='/'>
      查询类别：<select name='variety' ng-model='kind'>
                    <option value='3G'>3G</option>
                    <option value="4G">4G</option>
                </select>
      <div ng-if='kind=="4G"'>
      查询厂家：<select name='vender'>
                    <option value='华为'>华为</option>
                    <option value='爱立信'>爱立信</option>
                </select>
      </div>
      起始时间:<input type='text' name='timeFrom'>
      截止时间:<input type='text' name='timeEnd'>
    	分公司：<input type='text' name='searchEle'>

      
      <div ng-if='kind=="3G"'>
          查询方式：<select name='type' ng-model='type'>
          <option value='模糊查找'>模糊查找</option>
          <option value='范围查找'>范围查找</option>
        </select>
        <div ng-if='type=="模糊查找"'>
          查询名称：<input type='text' name='condition'>
          查询值：<input type='text' name='screening' >
        </div>
        <div ng-if='type=="范围查找"'>
          查询名称：<input type='text' name='condition'>
          最小值：<input type='text' name='min'>
          最大值:<input type='text' name='max'>          
        </div>
      <input type='submit' value='查询'>
      {{condition}}
      </div>
      <div ng-if='kind=="4G"'>
          查询方式：<select name='type' ng-model='type'>
          <option value='模糊查找'>模糊查找</option>
          <option value='范围查找'>范围查找</option>
        </select>
        <div ng-if='type=="模糊查找"'>
          查询名称：<input type='text' name='condition'>
          查询值：<input type='text' name='screening' >
        </div>
        <div ng-if='type=="范围查找"'>
          查询名称：<input type='text' name='condition'>
          最小值：<input type='text' name='min'>
          最大值:<input type='text' name='max'>          
        </div>
      <input type='submit' value='查询'>
      {{condition}}
      </div>
    </form>
  </body>
</html>
